{
  "name": "qwik-speak",
  "description": "Internationalization (i18n) library to translate texts, dates and numbers in Qwik apps",
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "wrangler pages publish ./dist",
    "serve": "wrangler pages dev ./dist",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "lint": "eslint src/**/*.ts*",
    "preview": "qwik build preview && vite preview --open",
    "qwik-speak-extract": "qwik-speak-extract --supportedLangs=en-US,it-IT --assetsPath=i18n",
    "start": "vite --open --mode ssr",
    "test": "vitest test --run",
    "test.e2e": "playwright test",
    "qwik": "qwik"
  },
  "bin": {
    "qwik-speak-extract": "./packages/qwik-speak/extract/cli.js"
  },
  "devDependencies": {
    "@builder.io/qwik": "1.1.4",
    "@builder.io/qwik-city": "1.1.4",
    "@playwright/test": "^1.32.3",
    "@types/eslint": "8.37.0",
    "@types/node": "^18.16.1",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "eslint": "8.39.0",
    "eslint-plugin-qwik": "1.1.4",
    "qwik-speak": "^0.14.0",
    "typescript": "5.0.4",
    "undici": "5.22.0",
    "vite": "4.3.5",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "^0.30.1",
    "wrangler": "latest"
  },
  "type": "module"
}
